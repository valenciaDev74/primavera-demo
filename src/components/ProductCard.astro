---
const { item, direction } = Astro.props;
---

<div
  class="flex gap-4 justify-center items-start"
  class:list={[{ "flex-row-reverse": direction === "right" }]}
>
  <img class="rounded-3xl min-w-fit h-64" src={item.image} alt={item.image} />

  <div>
    <h3 class="text-2xl font-bold">{item.name}</h3>
    <h4 class="text-xl font-bold text-amber-500 mb-4">{item.subtitle}</h4>
    <ul class="list-disc ml-5 text-pretty">
      {item.properties.map((p) => <li>{p}</li>)}
    </ul>
  </div>
</div>
